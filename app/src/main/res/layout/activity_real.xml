<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codingblocks.whatsupthere.RealActivity">


    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/icon45"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHighlight="@color/colorAccent"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/ivIcon"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"

        android:text="Temperature" />

    <TextView
        android:id="@+id/tvCondtn"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/tvTemp"
        android:layout_alignStart="@+id/tvTemp"
        android:layout_below="@+id/tvTemp"
        android:layout_marginTop="23dp"
        android:text="Condition" />

    <TextView
        android:id="@+id/tvLoctn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCondtn"
        android:layout_alignStart="@+id/tvCondtn"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"

        android:layout_below="@+id/tvCondtn"
        android:layout_marginTop="22dp"
        android:text="Location" />

    <ImageView
        android:id="@+id/imageView2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="47dp"
        app:srcCompat="@drawable/purple"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
